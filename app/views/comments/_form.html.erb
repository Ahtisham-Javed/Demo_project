<%= form_for [product, comment] do |f| %>
	<div class = "form-group">
	  <p>
	    <%= f.text_area :comment, required: true, placeholder: "Comment...", class: "form-control" %>
	  </p>
	</div>
	<div class = "form-group" style='text-align: center;'>
	  <p>
	    <%= f.submit class: "btn btn-danger btn-block" %>
	  </p>
	</div>
<%end%>
