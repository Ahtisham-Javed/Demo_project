<div id="carouselExampleControls" class="carousel slide" data-ride="carousel" data-interval="3000">
  <div class="carousel-inner">
    <div class="carousel-item active">
      	<%= image_tag "home1.jpg", class: "d-block w-100 banner_height" %>
    </div>
    <div class="carousel-item">
      <%= image_tag "home2.jpg", class: "d-block w-100 banner_height" %>
    </div>
    <div class="carousel-item">
      <%= image_tag "home3.jpg", class: "d-block w-100 banner_height" %>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
<div class="card-deck" style="margin: 3%">
	<% @products.each do |p|%>
		<%= link_to product_path(p) do %>
			<div class="card">
				<div class="card-body">
					<% if p.product_images.attached? %>
						<%= image_tag p.resize_image(0), width: "100%", height: "60%" %>
					<%else%>
						<%= image_tag "package.jpg", width: "100%", height: "60%" %>
					<%end%>
					<h3 class="card-title">Title: <%= link_to p.title, product_path(p) %></h3>
					<h4 class="card-title">Price: $<%= p.price %></h4>
					<% if p.availability == true %>
						<h5 class="card-title">Available: Yes</h5>
					<%else%>
						<h5 class="card-title">Available: Out of stock</h5>
					<%end%>
				</div>
			</div>
		<%end%>
	<% end %>
</div>
